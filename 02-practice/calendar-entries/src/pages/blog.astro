---
import Meta from "../components/site/Meta.astro";
import Header from "../components/layout/Header.astro";
import Footer from "../components/layout/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../config";

const posts = await Astro.glob("./blog/**/*.{md,mdx}");
const jan = posts.filter(
  (post) => post.frontmatter.pubDate.slice(0, 3) == "Jan"
);
const feb = posts.filter(
  (post) => post.frontmatter.pubDate.slice(0, 3) == "Feb"
);
const mar = posts.filter(
  (post) => post.frontmatter.pubDate.slice(0, 3) == "Mar"
);
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <Meta title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header />
    <main>
      <section>
				<!-- January -->
        <ul>
          {
            jan.map((post) => (
              <li>
                <a href={post.url}>
                  <time datetime={post.frontmatter.pubDate}>
                    {new Date(post.frontmatter.pubDate).toLocaleDateString(
                      "en-us",
                      {
                        year: "numeric",
                        month: "short",
                        day: "numeric",
                      }
                    )}
                  </time>
                </a>
              </li>
            ))
          }
        </ul>
				<!-- Febuary -->
        <ul>
          {
            feb.map((post) => (
              <li>
                <a href={post.url}>
                  <time datetime={post.frontmatter.pubDate}>
                    {new Date(post.frontmatter.pubDate).toLocaleDateString(
                      "en-us",
                      {
                        year: "numeric",
                        month: "short",
                        day: "numeric",
                      }
                    )}
                  </time>
                </a>
              </li>
            ))
          }
        </ul>
				<!-- March -->
        <ul>
          {
            mar.map((post) => (
              <li>
                <a href={post.url}>
                  <time datetime={post.frontmatter.pubDate}>
                    {new Date(post.frontmatter.pubDate).toLocaleDateString(
                      "en-us",
                      {
                        year: "numeric",
                        month: "short",
                        day: "numeric",
                      }
                    )}
                  </time>
                </a>
              </li>
            ))
          }
        </ul>
      </section>
    </main>
    <Footer />
    <style>
      ul {
        list-style-type: none;
        padding: unset;
        display: flex;
        flex-direction: column;
        flex-wrap: wrap;
      }
      ul li {
        padding: 1rem 0.75rem;
        padding-left: 0;
      }
      ul li time {
        flex: 0 0 130px;
        font-style: italic;
        color: #595959;
      }
      ul li a:visited {
        color: #8e32dc;
      }
    </style>
  </body>
</html>
